<%= form_tag(pin_post_pins_path(pin),:remote=>true) do%>
  <p>Select a board for Pinning</p>
  <% if current_user.boards%>
    <% current_user.boards.each do |b|%>
      <%= radio_button_tag :board_id, b.id %>
      <%= b.title %><br/>
    <%end%>
    <%= submit_tag 'Save', :class => "btn btn-primary"%>
  <%end%>
<%end%>